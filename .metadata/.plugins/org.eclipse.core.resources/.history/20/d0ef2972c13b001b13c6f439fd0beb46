package fundamentos;

import java.util.Scanner;

public class DesafioConversao {

	public static void main(String[] args) {
		
		Scanner entrada = new Scanner(System.in);
		
		System.out.print("Digite o primeiro salário: ");
		String salario1 = entrada.nextLine();
		salario1 = salario1.replace(",", ".");
		
		System.out.print("\nDigite o segundo salário: ");
		String salario2 = entrada.nextLine();
		salario1 = salario1.replace(",", ".");
		
		System.out.print("\nDigite o terceiro salário: ");
		String salario3 = entrada.nextLine();
		salario1 = salario1.replace(",", ".");
		
		float media = (Float.parseFloat(salario1) + Float.parseFloat(salario2) + Float.parseFloat(salario3) / 3);
		
		System.out.println("A média de salários é: " + media);
		
		entrada.close();
	}
}
